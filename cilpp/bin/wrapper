#!/bin/bash

# set ourselves as the wrapper
WRAPPER="$0"
# source the wrapper funcs
. "${WRAPPER_FUNCS:-$(dirname "$0")/../../wrapper/lib/wrapper-funcs.sh}"

# cpp is expanded without quotes, so it can generate multiple command-line words
# ... so anything that needs protecting should be escape-quoted
declare -a CPP
CPP[0]="$(dirname "$0")"/cilpp
CPP[1]="-driver"
CPP[2]="$(guess_driver)"

# delegate to the generic wrapper -- we've set WRAPPER so it won't re-source the funcs
. "$(dirname "$0")/../../wrapper/bin/wrapper"
